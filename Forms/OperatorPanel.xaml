<Page x:Class="CityTransport.Forms.OperatorPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CityTransport.Forms"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OperatorPanel"
      Background="GhostWhite">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="0.7*"/>
            <RowDefinition  MaxHeight="300"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Grid.Column="1" Margin="15" Orientation="Vertical"
                    CanVerticallyScroll="True">
            <Button x:Name="btnStats"
                Margin="5" MinHeight="30">Stats</Button>

            <Button x:Name="btnEditRoute"
                Margin="5" MinHeight="30">Edit chosen route</Button>
            
            <Button x:Name="btnCreeateRoute"
                Margin="5" MinHeight="30">Create new route</Button>
        </StackPanel>

        <ListBox x:Name="lbRoutes" Margin="25"  Grid.Row="2" >

        </ListBox>

    </Grid>
</Page>
